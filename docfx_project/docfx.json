{
  "$schema": "https://raw.githubusercontent.com/dotnet/docfx/main/schemas/docfx.schema.json",
  "metadata": [
    {
      "src": [
        {
          "src": "..",
          "files": [
            "Albatross.CodeAnalysis/Albatross.CodeAnalysis.csproj",
			"Albatross.CodeAnalysis.Polyfill/Albatross.CodeAnalysis.Polyfill.csproj",
			"Albatross.CodeAnalysis.Testing/Albatross.CodeAnalysis.Testing.csproj"
          ]
        }
      ],
      "output": "api"
    }
  ],
  "build": {
    "content": [
      {
        "files": [
          "**/*.{md,yml}"
        ],
        "exclude": [
          "_site/**"
        ]
      }
    ],
    "resource": [
      {
        "files": [
          "images/**"
        ]
      }
    ],
    "output": "_site",
    "template": [
      "default",
      "modern"
    ],
    "globalMetadata": {
      "_appName": "Albatross.CodeAnalysis",
      "_appTitle": "Albatross.CodeAnalysis",
	  "_appLogoPath":"./images/logo.svg",
      "_enableSearch": true,
      "pdf": false
    }
  }
}